.content{
    width: 100%;
    height: 100vh;
    
    background-color: sandybrown;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    flex-wrap: wrap;
}
.content .food{
    width: 100%;
    height: 200rpx;
    background-color: silver;
    border: 2rpx solid firebrick;
    display: flex;
    flex-direction: row;
    margin-top: 20rpx;
}
.content .food image{
    width: 35%;
    height: 200rpx;
    background-color: seagreen;
}
.content .food .mes{
    width: 65%;
    height: 200rpx;
    background-color: rgb(157, 189, 190);
    position: relative;
}
.content .food .mes .foodName{
    position: absolute;
    top: 0;
    left: 0;
    font-size: 35rpx;  
}
.content .food .mes .foodIntroduce{
    position: absolute;
    top: 50rpx;
    left: 0;
    color: rgb(185, 161, 161);
    font-size: 28rpx;  
}
.content .food .mes .special{
    position: absolute;
    width: 60rpx;
    height: 30rpx;
    border: 2rpx solid  rgb(255, 60, 0);
    top: 120rpx;
    left: 0;
    color: rgb(255, 60, 0);
    font-size: 25rpx;  
    line-height: 30rpx;
    text-align: center;
}
.content .food .mes p{
    position: absolute;
    top: 150rpx;
    left: 0;
    color: rgb(255, 94, 0);
    font-size: 30rpx;  
}
.content .food .mes .btn{
    position: absolute;
    right: 20rpx;
    bottom: 0rpx;
    width: 200rpx;
	text-align: right;
}
