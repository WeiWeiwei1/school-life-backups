/* pages/orderFood/orderFood.wxss */
.container{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
}
.navigation{
    width: 25%;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: flex-start; 
    align-items: center;
    background-color: #f7f7f7;



}

.navigation .navFood{
    width: 100%;
    height: 100rpx;
    font-size: 30rpx;
    text-align: center;
    color: rgba(0, 0, 0, 0.548);
    line-height: 100rpx;
    border-right: 1rpx solid rgb(185, 182, 182);
}
.navigation .navFood.active{
    margin-right: -2rpx;
    margin-left: -2rpx;
    color: black;
    background-color: white;
    border-right: 0 solid ; 
    border-top: 1rpx solid rgb(185, 182, 182);
    border-bottom: 1rpx solid rgb(185, 182, 182);
}
.bottom{
    width: 100%;
    height: 100%;
    border-right: 1rpx solid rgb(185, 182, 182);
}
.content{
    width: 75%;
    height: 100vh;
    /* background-color: sandybrown; */
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    flex-wrap: wrap;
    margin-left: 1rpx;
}
.content .food{
    width: 100%;
    height: 200rpx;
    /* background-color: silver; */
    border-bottom: 1rpx solid rgb(185, 182, 182);
    display: flex;
    flex-direction: row;
    margin-top: 20rpx;
}
.content .food image{
    width: 30%;
    height: 180rpx;
    margin: 10rpx;
    /* background-color: seagreen; */
}
.content .food .mes{
    width: 65%;
    height: 200rpx;
    /* background-color: rgb(157, 189, 190); */
    position: relative;
}
.content .food .mes .foodName{
    position: absolute;
    top: 0;
    left: 0;
    font-size: 35rpx;  
}
.content .food .mes .foodIntroduce{
    position: absolute;
    top: 50rpx;
    left: 0;
    color: rgb(185, 161, 161);
    font-size: 28rpx;  
}
.content .food .mes .special{
    position: absolute;
    width: 60rpx;
    height: 30rpx;
    border: 2rpx solid  rgb(255, 60, 0);
    top: 120rpx;
    left: 0;
    color: rgb(255, 60, 0);
    font-size: 25rpx;  
    line-height: 30rpx;
    text-align: center;
}
.content .food .mes p{
    position: absolute;
    top: 150rpx;
    left: 0;
    color: rgb(255, 94, 0);
    font-size: 30rpx;  
}
.content .food .mes .btn{
    position: absolute;
    right: 20rpx;
    bottom: 10rpx;
    width: 200rpx;
	text-align: right;
}


.cart{
    height: 10vh;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
	position: fixed;
	left: 0;
	right: 0; 
	bottom: 0;
	padding: 50rpx;
    background: #e7e7e7;
}
.cart .total{
    margin-right: 25rpx;
}
.cart button{
    margin-right: 60rpx;
}
