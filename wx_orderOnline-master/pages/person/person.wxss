.weui-cell:before{
  left: 0;
}
  .weui_cell_hd{
    display: inline-block;
    width: 20rpx;
    margin-right: 5rpx;
  }
  .weui-cell__hd image{
    width: 60rpx;
    height: 60rpx;
    margin-right: 15rpx;
    vertical-align: -2px;
  }
  .weui_cell_bd{
    display: inline-block;

  }
  .weui_cell_bd_p{
    font-size: 14rpx;
    color: #939393;
  }
  .badge{
    position: absolute;
    top: 30rpx;
    right: 20rpx;
    width: 30rpx;
    height: 30rpx;
    background: #ff0000;
    color: #fff;
    border-radius: 50%;
    text-align: center;
    font-size: 20rpx;
  } 
  .weui-cell__ft{

    margin-right: 20rpx;
  }
  .weui-cell__ft:after {
    margin-right: 20rpx;
    content: " ";
    display: inline-block;
    height: 6px;
    width: 6px;
    border-width: 2px 2px 0 0;
    border-color: #C8C8CD;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    position: relative;
    top: -2px;
    position: absolute;
    top: 50%;
    margin-top: -4px;
    right: 2px;
}
.userinfo-avatar{
    background-size: cover;
    width: 80rpx;
    height: 80rpx;
    margin: 20rpx;
    border-radius: 50%;
}